<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ln_hisotry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#000000" />

        <Button
            android:id="@+id/btn_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FA9A0E"
            android:text="닫기"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_calc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#000000"
            android:gravity="bottom|right"
            android:padding="10dp"
            android:textColor="#8C8A8A"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000000"
            android:gravity="bottom|right"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            app:columnCount="4"
            app:orientation="horizontal"
            app:rowCount="5">


            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outlineorange"
                android:gravity="center"
                android:text="C"
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outlineorange"
                android:gravity="center"

                android:text="B"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_history"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outlineorange"
                android:gravity="center"
                android:text="H"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_plus"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outlineorange"
                android:gravity="center"

                android:text="+"
                android:textSize="20sp"
                app:layout_column="3"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_minus"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outlineorange"
                android:gravity="center"
                android:text="-"
                android:textSize="20sp"
                app:layout_column="3"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_multiply"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outlineorange"
                android:gravity="center"
                android:text="x"
                android:textSize="20sp"
                app:layout_column="3"
                app:layout_row="3"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="3"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="3"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_row="3"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_devide"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outlineorange"
                android:gravity="center"
                android:text="/"
                android:textSize="20sp"
                app:layout_column="3"
                app:layout_row="4"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_dot"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="4"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="4"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/tv_equal"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_column="2"
                app:layout_row="4"
                app:layout_rowWeight="1" />

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</LinearLayout>